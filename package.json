{
  "name": "telegram-snake-senior",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:bot": "yarn workspace bot dev",
    "dev:bot:safe": "(lsof -ti :3001 -sTCP:LISTEN | xargs -r kill); yarn workspace bot dev",
    "dev:frontend": "yarn workspace frontend dev -- --port 8889 --host 0.0.0.0",
    "build": "yarn workspace bot build && yarn workspace frontend build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "yarn workspaces run test",
    "test:e2e": "playwright test",
    "dev:redis": "docker compose up -d redis",
    "dev:up": "yarn dev:redis && (lsof -ti :3001 -sTCP:LISTEN | xargs -r kill); yarn dev:frontend ",
    "dev:all": "yarn dev:redis && concurrently -k \"yarn dev:frontend\" \"yarn dev:bot:safe\""
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
